<?xml version="1.0" encoding="UTF-8" ?>

<!-- scan为true标识可以动态修改配置文件，修改后10秒生效，设置为false，标识不能动态修改配置文件，动态标识：在不停机的情况下修改 -->
<configuration scan="true" scanPeriod="10 seconds">

	<!-- 自定义变量，可以通过$变量名获取到变量值，在logback中由一些内置的变量，thread：当前线程，level：当前日志级别，logger：loger变量的tostring，msg：日志值 -->
	<property name="log_diract" value="/ddd/"></property>
	
	
	
	
	
	
	<!-- Appender主要用于指定日志输出的目的地，目的地可以是控制台、文件、远程套接字服务器、 MySQL、PostreSQL、 Oracle和其他数据库、 JMS和远程UNIX Syslog守护进程等。 -->
    <appender name="append_1" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>
    
    <appender name="append_2" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
        <addtivity value="false" />
    </appender>
    
    <appender name="root_t" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>
    
    <!-- 自定义一个logger，每个logger默认都会将信息传递到父logger(root时所有logger的父logger)，父logger会按照其配置的appender将消息按照指定的格式输出 -->
     <logger name="logger2" value="debug" additivity="false" >
		<appender-ref ref="append_2" />     		
	</logger> 
    
    
    <root level="debug">
		<appender-ref ref="root_t" />     		
    </root>
    
</configuration>